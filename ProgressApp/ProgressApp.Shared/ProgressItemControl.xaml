<UserControl
    x:Class="ProgressApp.ProgressItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProgressApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="100"
    d:DesignWidth="400" BorderThickness="0" Margin="0,0,0,20">
    
    <Grid Margin="0" Height="100">
		<Grid.Background>
			<SolidColorBrush Color="{Binding Color}"/>
		</Grid.Background>
		<Grid x:Name="progress" Background="#FF151515" Opacity="0.2" HorizontalAlignment="Left" Width="275"/>
		<TextBlock Margin="10,42,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Foreground="White" FontSize="40" FontFamily="Segoe UI Light" HorizontalAlignment="Left" Width="380" FontWeight="ExtraLight"/>
		<Slider x:Name="progressBar" HorizontalAlignment="Left" Height="98" VerticalAlignment="Top" Width="398" Background="#00000000" Foreground="#4C151515" Minimum="{Binding Minimum}" Maximum="{Binding Maximum}" Value="{Binding Value, Mode=TwoWay}" Visibility="Collapsed"/>
	</Grid>
</UserControl>
